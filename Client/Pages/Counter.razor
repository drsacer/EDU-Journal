@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCountPlus</p>
 <p role="status">Current count: @currentCountMinus</p> 

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<button class="btn btn-primary" @onclick="DecrementCount">Click me</button>


@code {
    private int currentCountPlus = 0;

    private void IncrementCount()
    {
        currentCountPlus++;
        Console.WriteLine("Test");

    }


private int currentCountMinus = 0;

    private void DecrementCount()
    {
        currentCountMinus--;
    }
}
